package activity4;

import java.util.Scanner;

public class act4q15 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		 Scanner scan = new Scanner(System.in);
			
		 	char alpha1, check;
			int len;
			String beta;
			System.out.println(" Input an Grade: ");
			beta = scan.next();
			len = beta.length();
			alpha1 = beta.charAt(0);
			
			String alpha = String.valueOf(Character.toLowerCase(alpha1)) ;
			
			if (len > 1  ) {
				System.out.println("Please input single character alphabet ");
			} else {
			if (Character.isDigit(alpha1)) {
				System.out.println("Please input single character alphabet we ");
			}else {
			
			
			switch(alpha1){
			case 'e':
				System.out.println("Excellent");
	              break;
	          case 'v':
	        	  System.out.println("Very Good");
	              break;
	          default:
	              break;
	    }
			}
			}
			}
			double grade;
			System.out.println("Please Enter your Grade: ");
			grade = scan.nextDouble();
			
			if (grade > 80) { 
				System.out.println("Grade is A");
			} else if (grade > 60 ) {
				System.out.println("Grade is B");
			} else if (grade > 50) {
				System.out.println("Grade is C");
			} else if (grade > 45) {
				System.out.println("Grade is D");
			} else if (grade >= 25) {
				System.out.println("Grade is E");
			} else {
				System.out.println("Grade is F");
			}
	}

}
